<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    android:id="@+id/CVFeatured"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="180dp"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="3dp"
    android:layout_marginBottom="3dp"
    android:layout_marginLeft="0.7dp"
    android:layout_marginRight="0.7dp"
    app:cardBackgroundColor="@color/colorPanel"
    app:cardCornerRadius="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/TvTeam1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="India"
            android:gravity="center_vertical"
            android:drawableStart="@drawable/ic_team"
            android:textColor="@color/colorGreyBackgroundText"
            android:drawablePadding="5dp"
            android:drawableTint="@color/colorBlue"
            android:textSize="12sp"
            android:drawableLeft="@drawable/ic_team" />

        <TextView
            android:id="@+id/TvTeam2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/TvTeam1"
            android:text="West Indies"
            android:gravity="center_vertical"
            android:drawableStart="@drawable/ic_team"
            android:drawableTint="@color/colorRed"
            android:drawablePadding="5dp"
            android:textColor="@color/colorGreyBackgroundText"
            android:textSize="12sp"
            android:drawableLeft="@drawable/ic_team" />

        <TextView
            android:id="@+id/TvTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/TvTeam2"
            android:text="Today 20:15"
            android:textStyle="italic"
            android:textColor="@color/colorGreyText"
            android:textSize="10sp"
            android:layout_marginLeft="3dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/TvTime"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/TvBack1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textAlignment="center"
                android:textSize="12sp"
                android:layout_margin="1dp"
                android:background="@color/colorPanelBottom"
                android:textColor="@color/colorGreyBackgroundText"
                android:text="1 1.72" />

            <TextView
                android:id="@+id/TvBack2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textAlignment="center"
                android:textSize="12sp"
                android:layout_margin="1dp"
                android:background="@color/colorPanelBottom"
                android:textColor="@color/colorGreyBackgroundText"
                android:text="1 1.72" />

        </LinearLayout>

    </RelativeLayout>

</androidx.cardview.widget.CardView>