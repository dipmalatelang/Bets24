<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardBackgroundColor="@color/colorPanel">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/TV_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="India"
            android:textSize="12sp"
            android:gravity="center_vertical"
            android:drawableStart="@drawable/ic_team"
            android:textColor="@color/colorGreyBackgroundText"
            android:drawablePadding="5dp"
            android:padding="3dp"
            android:drawableLeft="@drawable/ic_team" />

        <TextView
            android:id="@+id/TV_name0"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/TV_name"
            android:text="West Indies"
            android:textSize="12sp"
            android:gravity="center_vertical"
            android:drawableStart="@drawable/ic_team"
            android:drawablePadding="5dp"
            android:padding="3dp"
            android:textColor="@color/colorGreyBackgroundText"
            android:drawableLeft="@drawable/ic_team" />

        <TextView
            android:id="@+id/TV_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/TV_name0"
            android:text="Today 20:15"
            android:layout_marginStart="5dp"
            android:paddingTop="3dp"
            android:textSize="12sp"
            android:paddingBottom="3dp"
            android:textColor="@color/colorGreyBackgroundText"
            android:layout_marginLeft="3dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/TV_time"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textAlignment="center"
                android:padding="3dp"
                android:textSize="12sp"
                android:layout_margin="1dp"
                android:background="@color/colorPanelBottom"
                android:textColor="@color/colorGreyBackgroundText"
                android:text="1 1.72" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textAlignment="center"
                android:padding="3dp"
                android:textSize="12sp"
                android:layout_margin="1dp"
                android:background="@color/colorPanelBottom"
                android:textColor="@color/colorGreyBackgroundText"
                android:text="1 1.72" />

        </LinearLayout>

    </RelativeLayout>

</androidx.cardview.widget.CardView>